- event: toggle_switched
  schema:
    toggle_id: id
    toggle_name: string?
    old_state: boolean
    new_state: boolean
    switched_at: date = now()

- event: checkbox_checked
  schema:
    checkbox_id: id
    checkbox_name: string?
    checkbox_label: string?
    form_id: id?
    checked_at: date = now()

- event: checkbox_unchecked
  schema:
    checkbox_id: id
    checkbox_name: string?
    checkbox_label: string?
    form_id: id?
    unchecked_at: date = now()

- event: radio_selected
  schema:
    radio_group_id: id
    radio_id: id
    radio_name: string?
    radio_value: string?
    previous_value: string?
    form_id: id?
    selected_at: date = now()

- event: switch_enabled
  schema:
    switch_id: id
    switch_name: string?
    switch_label: string?
    enabled_at: date = now()

- event: switch_disabled
  schema:
    switch_id: id
    switch_name: string?
    switch_label: string?
    disabled_at: date = now()
