- action: create
  inputs:
    description: string
    name: string
    permissions: list[role_permission]
  outputs:
    role_id: string

- action: update
  inputs:
    description: string
    name: string
    permissions: list[role_permission]
    role_id: string

- action: delete
  inputs:
    role_id: string

- action: list
  inputs:
    limit: int = 100
    offset: int = 0
  outputs:
    roles: list[role_info]
    total: int

- action: get
  inputs:
    role_id: string
  outputs:
    description: string
    name: string
    permissions: list[role_permission]
    user_count: int

- action: check_permission
  inputs:
    method: string
    resource: string
    role_id: string
  outputs:
    allowed: boolean

- action: add_permission
  inputs:
    method: string
    conditions: role_permission_conditions
    resource: string
    role_id: string

- action: remove_permission
  inputs:
    method: string
    resource: string
    role_id: string

- action: clone
  inputs:
    new_name: string
    source_id: string
  outputs:
    role_id: string

- object: role
  schema:
    role_id: string
    name: string
    description: string
    permissions: list[role_permission]
    user_count: int
    created_at: date

- object: role_permission
  schema:
    method: string
    resource: string
    conditions: role_permission_conditions

- object: role_info
  schema:
    role_id: string
    name: string
    description: string
    user_count: int

- object: role_permission_conditions
  schema:
    conditions: map[string, any]

- object: role_assignment
  schema:
    assigned_at: date = now()
    assigned_by: string
    entity_id: string
    entity_type: user | group = user
    expires_at: date
    role_id: string
