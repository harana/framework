- action: template
  inputs:
    data: template_data
    engine: handlebars | mustache | tera = handlebars
    template: string
  outputs:
    result: string

- action: regex_match
  inputs:
    flags: string
    pattern: string
    text: string
  outputs:
    matches: list[string]

- action: regex_replace
  inputs:
    flags: string
    pattern: string
    replacement: string
    text: string
  outputs:
    result: string

- action: split
  inputs:
    delimiter: string
    limit: int
    text: string
  outputs:
    parts: list[string]

- action: join
  inputs:
    items: list[string]
    separator: string = ""
  outputs:
    result: string

- action: trim
  inputs:
    characters: string
    mode: both | start | end = both
    text: string
  outputs:
    result: string

- action: case_convert
  inputs:
    format: upper | lower | camel | pascal | snake | kebab
    text: string
  outputs:
    result: string

- action: truncate
  inputs:
    length: int
    suffix: string = "..."
    text: string
  outputs:
    result: string

- action: slugify
  inputs:
    lowercase: boolean = true
    separator: string = "-"
    text: string
  outputs:
    slug: string

- object: text_string
  schema:
    content: string
    length: int
    encoding: string

- object: template_data
  schema:
    values: map[string, any]

- object: text_template
  schema:
    content: string
    created_at: date = now()
    description: string
    engine: handlebars | mustache | tera = handlebars
    is_active: boolean = true
    updated_at: date = now()
    variables: string #json
