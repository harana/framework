- action: create_flag
  inputs:
    default_variation: int = 0
    description: string
    enabled: boolean = false
    key: string
    name: string
    tags: list[string]
    variations: list[flag_variation]
  outputs:
    flag_id: string
    key: string

- action: update_flag
  inputs:
    description: string
    enabled: boolean
    flag_id: string
    name: string
    tags: list[string]
    variations: list[flag_variation]
  outputs:
    flag_id: string

- action: toggle_flag
  inputs:
    enabled: boolean
    flag_id: string
  outputs:
    enabled: boolean
    flag_id: string

- action: delete_flag
  inputs:
    flag_id: string

- action: get_flag
  inputs:
    flag_id: string
  outputs:
    created_at: int
    description: string
    enabled: boolean
    flag_id: string
    key: string
    name: string
    updated_at: int
    variations: list[flag_variation]

- action: list_flags
  inputs:
    enabled: boolean
    limit: int = 100
    offset: int = 0
    tags: list[string]
  outputs:
    flags: list[feature_flag]
    total: int

- action: evaluate_flag
  inputs:
    context: flag_evaluation_context
    flag_id: string
    user_id: string
  outputs:
    enabled: boolean
    flag_id: string
    reason: string
    variation: flag_variation

- action: create_targeting_rule
  inputs:
    conditions: list[flag_rule_condition]
    flag_id: string
    name: string
    priority: int = 0
    variation: int
  outputs:
    flag_id: string
    rule_id: string

- action: update_targeting_rule
  inputs:
    conditions: list[flag_rule_condition]
    name: string
    priority: int
    rule_id: string
    variation: int
  outputs:
    rule_id: string

- action: delete_targeting_rule
  inputs:
    rule_id: string

- action: create_rollout
  inputs:
    flag_id: string
    percentages: map[string, integer]
    seed: string
  outputs:
    flag_id: string
    rollout_id: string

- action: update_rollout
  inputs:
    percentages: map[string, integer]
    rollout_id: string
  outputs:
    rollout_id: string

- action: get_evaluation_count
  inputs:
    end_date: int
    flag_id: string
    start_date: int
  outputs:
    flag_id: string
    total_evaluations: int
    variation_counts: map[string, integer]

- action: create_environment
  inputs:
    description: string
    key: string
    name: string
  outputs:
    environment_id: string
    key: string

- action: clone_flag
  inputs:
    flag_id: string
    source_environment: string
    target_environment: string
  outputs:
    flag_id: string

- action: archive_flag
  inputs:
    flag_id: string
  outputs:
    archived: boolean
    flag_id: string

- action: restore_flag
  inputs:
    flag_id: string
  outputs:
    archived: boolean
    flag_id: string

- object: feature_flag
  schema:
    flag_id: string
    key: string
    name: string
    description: string
    enabled: boolean
    variations: list[flag_variation]
    default_variation: int
    tags: list[string]
    created_at: date
    updated_at: date

- object: flag_variation
  schema:
    name: string
    value: any
    description: string

- object: flag_evaluation_context
  schema:
    user_id: string
    attributes: map[string, any]

- object: flag_rule_condition
  schema:
    attribute: string
    operator: string
    value: any

- object: feature_flag_variation
  schema:
    description: string
    flag_id: string
    sort_order: int = 0
    value: string

- object: feature_flag_targeting_rule
  schema:
    conditions: string #json
    flag_id: string
    is_active: boolean = true
    name: string
    priority: int = 0
    variation_index: int

- object: feature_flag_evaluation_log
  schema:
    evaluated_at: date = now()
    flag_id: string
    reason: string
    user_id: string
    variation_index: int
